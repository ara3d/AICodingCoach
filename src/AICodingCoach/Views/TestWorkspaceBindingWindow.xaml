<Window x:Class="AICodingCoach.Views.TestWorkspaceBindingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AICodingCoach.Views"
        xmlns:viewModels="clr-namespace:AICodingCoach.ViewModels"
        mc:Ignorable="d"
        Title="TestWorkspaceBindingWindow" Height="450" Width="800" 
        d:DataContext="{d:DesignInstance viewModels:WorkspaceViewModel}">
    	<TabControl ItemsSource="{Binding Projects}">
		    
	        <TabControl.ItemTemplate>
			    <DataTemplate DataType="viewModels:ProjectViewModel">
				    <TextBlock Text="{Binding Model.Name}" />
			    </DataTemplate>
		    </TabControl.ItemTemplate>

	        <TabControl.ContentTemplate>
			    <DataTemplate DataType="viewModels:ProjectViewModel">
				    <TextBlock Text="{Binding Model.Code}" />
			    </DataTemplate>
		    </TabControl.ContentTemplate>
	    </TabControl>
</Window>
